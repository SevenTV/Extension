{
	"manifest_version": 3,
	"name": "7TV",
	"description": "A third party emote extension for Twitch",
	"version": "1.6.0",
	"action": {
		"default_icon": "icon128.png"
	},
	"background": {
		"service_worker": "background.js"

	},
	"content_scripts": [
		{
			"matches": ["*://*.twitch.tv/*"],
			"js": ["content.js"],
			"runAt": "document_start"
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"page.js",
				"ffz_hook.js",
				"ffz_addon.js",
				"styles/Style.css",
				"image/*.webp"
			],
			"matches": ["<all_urls>"]
		}
	],
	"host_permissions": [
		"*://*.twitch.tv/*"
	],
	"permissions": [
		"storage"
	],
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
