{
	"manifest_version": 2,
	"name": "7TV",
	"description": "7TV is an emote service and extension for Twitch",
	"version": "1.6.2",
	"page_action": {
		"default_icon": "icon128.png"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": ["*://*.twitch.tv/*"],
			"js": ["content.js"],
			"runAt": "document_start"
		}
	],
	"web_accessible_resources": [
		"page.js",
		"ffz_hook.js",
		"ffz_addon.js",
		"styles/Style.css",
		"image/*.webp"
	],
	"permissions": [
		"*://*.twitch.tv/*",
		"*://api.frankerfacez.com/*",
		"storage"
	],
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	}
}
