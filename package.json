{
	"name": "seventv",
	"displayName": "7TV",
	"description": "The Official 7TV Web Extension",
	"private": true,
	"version": "3.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite build --watch --mode dev",
		"build:dev": "vite build --mode dev",
		"build:stage": "vue-tsc --noEmit && vite build --mode stage",
		"build:prod": "vue-tsc --noEmit && vite build",
		"dev:web": "vite",
		"format": "prettier -w .",
		"lint:style": "stylelint **/*.{vue,scss,css} --ignore-path .gitignore",
		"lint:js": "eslint --ext .js,.vue,.ts --ignore-path .gitignore .",
		"lint": "yarn lint:js && yarn lint:style",
		"preview": "vite preview"
	},
	"dependencies": {
		"vue": "^3.2.37"
	},
	"devDependencies": {
		"@floating-ui/dom": "^1.0.2",
		"@types/chrome": "^0.0.195",
		"@types/fs-extra": "^9.0.13",
		"@types/node": "^18.7.13",
		"@types/sharedworker": "^0.0.82",
		"@typescript-eslint/eslint-plugin": "^5.34.0",
		"@typescript-eslint/parser": "^5.34.0",
		"@vitejs/plugin-vue": "^3.0.3",
		"@vue/eslint-config-prettier": "^7.0.0",
		"@vue/eslint-config-typescript": "^11.0.0",
		"chokidar": "^3.5.3",
		"dexie": "^3.2.2",
		"eslint": "^8.22.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-vue": "^9.4.0",
		"fs-extra": "^10.1.0",
		"nanoid": "^4.0.0",
		"npm-run-all": "^4.1.5",
		"pinia": "^2.0.22",
		"postcss-html": "^1.5.0",
		"prettier": "^2.7.1",
		"sass": "^1.54.5",
		"stylelint": "^14.11.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-recommended": "^9.0.0",
		"stylelint-config-recommended-scss": "^7.0.0",
		"stylelint-config-recommended-vue": "^1.4.0",
		"stylelint-config-standard": "^28.0.0",
		"typescript": "^4.6.4",
		"vite": "^3.0.7",
		"vite-plugin-chrome-extension": "^0.0.7",
		"vue-tsc": "^0.39.5",
		"webextension-polyfill-ts": "^0.26.0"
	}
}
